@using FinalYearProject.Models
@using FinalYearProject.Enums
@using FinalYearProject.Models.Payloads

@if (_isLoading)
{
    <LoadingScreen></LoadingScreen>
}
else
{
    <MudGrid>
        <MudItem xs="12">
            <MudSelect T="EditProfileSelect" Label="Select An Edit" OffsetY="true" @bind-value="EditProfile" Placeholder="@EditProfileSelect.EditFirstName">
                <MudSelectItem T="EditProfileSelect" Value="EditProfileSelect.EditLastName">Edit Last Name</MudSelectItem>
                <MudSelectItem T="EditProfileSelect" Value="EditProfileSelect.EditEmailAddress">Edit Email Address</MudSelectItem>
                <MudSelectItem T="EditProfileSelect" Value="EditProfileSelect.EditRole">Edit User Role</MudSelectItem>
            </MudSelect>
        </MudItem>
    </MudGrid>

}
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public User User { get; set; } = new User();

    public EditProfilePayload ProfilePayload = new EditProfilePayload();
    public EditProfileSelect EditProfile;
    bool _isLoading;
}